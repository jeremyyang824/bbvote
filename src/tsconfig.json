{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
        "@app/*": [ "./app/*" ],
        "@shared/*": [ "./shared/*" ],
        "@node_modules/*": [ "../node_modules/*" ],
        "echarts": ["node_modules/echarts/dist/echarts.min.js"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
